<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/help_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/TextView_radar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/radar38"
            android:drawablePadding="10dp"
            android:text="@string/btn_radar_description"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/TextView_calibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/calibrate32"
            android:drawablePadding="12dp"
            android:paddingLeft="2dp"
            android:paddingTop="5dp"
            android:text="@string/btn_calibrate_description"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/TextView_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/stop32"
            android:paddingLeft="2dp"
            android:drawablePadding="12dp"
            android:paddingTop="5dp"
            android:text="@string/btn_stop_description"
            android:textColor="#FFF" />
        
        <TextView
            android:id="@+id/TextView_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/settings32"
            android:paddingLeft="2dp"
            android:drawablePadding="12dp"
            android:paddingTop="5dp"
            android:text="@string/btn_settings_description"
            android:textColor="#FFF" />
        
        <TextView
            android:id="@+id/TextView_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/about32"
            android:drawablePadding="12dp"
            android:paddingLeft="2dp"
            android:paddingTop="5dp"
            android:text="@string/btn_about_description"
            android:textColor="#FFF" />
        
    </LinearLayout>

</ScrollView>